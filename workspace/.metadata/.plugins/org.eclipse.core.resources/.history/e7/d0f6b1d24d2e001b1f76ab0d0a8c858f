package com.adaming.clientui.proxies;

import java.util.List;

import org.springframework.cloud.netflix.ribbon.RibbonClient;
import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;

import com.adaming.clientui.beans.CommandeBean;
import com.adaming.clientui.beans.LivraisonBean;
import com.adaming.clientui.beans.ProduitBean;

@FeignClient(name = "zuul-server")
@RibbonClient(name = "microservice-gestionProduit")
public interface MicroServiceProduitProxies {

	@GetMapping("/produits")
	List<ProduitBean> findAll();
	
	@GetMapping("/commandes")
	List<CommandeBean> findAllCommande();
	
	@GetMapping("/livraisons")
	List<LivraisonBean> findAllLivraisons();
	
	@GetMapping("/produits/{id}")
	public ProduitBean findOne(Long id);
	@GetMapping("/commandes/{id}")
	public CommandeBean findOneCommande( Long id);
		
	@GetMapping("/livraisons/{id}")
	public LivraisonBean findOneLivraisons( Long id);
	
	

	@PostMapping("/livraisons")
	public LivraisonBean saveLivraison( LivraisonBean livraison);
	
	@PostMapping("/produits")
	public ProduitBean saveProduit(ProduitBean produit);
	
	@PostMapping("/commandes")
	public CommandeBean saveCommande (CommandeBean commandeBean );
	
	@PutMapping("/produits/{id}")
	public ProduitBean updateProduit(ProduitBean produit, Long id);

	@PutMapping("/commandes/{id}")
	public CommandeBean updateCommande (CommandeBean commande, Long id);

	@PutMapping("/livraisons/{id}")
	public LivraisonBean updateLivraison(LivraisonBean livraison, Long id);
	
	@DeleteMapping("/produits/{id}")
	void deleteProduit(Long id);
	
	@DeleteMapping("/commandes/{id}")
	void deleteCommande( Long id);
	@DeleteMapping("/livraisons/{id}")
	void deleteLivraison( Long id);
	
}
