package com.adaming.clientui.proxies;

import java.util.List;

import org.springframework.cloud.netflix.ribbon.RibbonClient;
import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;

import com.adaming.clientui.beans.CommandeBean;
import com.adaming.clientui.beans.LivraisonBean;
import com.adaming.clientui.beans.ProduitBean;

@FeignClient(name = "zuul-server")
@RibbonClient(name = "microservice-gestionProduit")
public interface MicroServiceProduitProxies {

	@GetMapping("microservice-gestionProduit/produits")
	List<ProduitBean> findAll();
	
	@GetMapping("microservice-gestionProduit/commandes")
	List<CommandeBean> findAllCommande();
	
	@GetMapping("microservice-gestionProduit/livraisons")
	List<LivraisonBean> findAllLivraisons();
	
	@GetMapping("microservice-gestionProduit/produits/{id}")
	public ProduitBean findOne(@PathVariable("id") Long id);
	
	@GetMapping("microservice-gestionProduit/commandes/{id}")
	public CommandeBean findOneCommande(@PathVariable("id") Long id);
		
	@GetMapping("microservice-gestionProduit/livraisons/{id}")
	public LivraisonBean findOneLivraisons(@PathVariable("id") Long id);
	
	

	@PostMapping("microservice-gestionProduit/livraisons")
	public LivraisonBean saveLivraison( @RequestBody LivraisonBean livraison);
	
	@PostMapping("microservice-gestionProduit/produits")
	public ProduitBean saveProduit(@RequestBody ProduitBean produit);
	
	@PostMapping("microservice-gestionProduit/commandes")
	public CommandeBean saveCommande (@RequestBody CommandeBean commandeBean );
	
	@PutMapping("microservice-gestionProduit/produits/{id}")
	public ProduitBean updateProduit(ProduitBean produit, @PathVariable("id") Long id);

	@PutMapping("microservice-gestionProduit/commandes/{id}")
	public CommandeBean updateCommande (CommandeBean commande, @PathVariable("id") Long id);

	@PutMapping("microservice-gestionProduit/livraisons/{id}")
	public LivraisonBean updateLivraison(LivraisonBean livraison, @PathVariable("id") Long id);
	
	@DeleteMapping("microservice-gestionProduit/produits/{id}")
	void deleteProduit(@PathVariable("id") Long id);
	
	@DeleteMapping("microservice-gestionProduit/commandes/{id}")
	void deleteCommande( @PathVariable("id") Long id);
	@DeleteMapping("microservice-gestionProduit/livraisons/{id}")
	void deleteLivraison(@PathVariable("id") Long id);
	
}
